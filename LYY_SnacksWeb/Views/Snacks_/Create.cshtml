@model LYY_SnacksWeb.Models.Users

@{
    ViewBag.Title = "Create";
}

<h2>注册</h2>
<script src="~/scripts/jquery-1.10.2.min.js"></script>
<script src="~/scripts/jquery.validate.min.js"></script>
<script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>RegisterViewModel</h4>*@
        <hr />
        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
        <div class="form-group">

            @Html.LabelFor(model => model.Usertype, "用户类型", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Usertype, new[] { new SelectListItem() { Selected = true, Text = "用户", Value = bool.TrueString }, new SelectListItem() { Selected = true, Text = "店主", Value = bool.FalseString } }, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Usertype, "", new { @class = "text-danger" })
            </div>
        </div>
        <script src="~/scripts/jquery-1.10.2.min.js"></script>
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, "用户名称", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PassWord, "用户密码", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Photo, "用户头像", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.DropDownListFor(model => model.Photo, new[] { new SelectListItem() { Selected = true, Text = "头像1", Value = bool.TrueString }, new SelectListItem() { Selected = true, Text = "头像2", Value = bool.FalseString } }, new { @class = "form-control" })
                @*@Html.EditorFor(model => model.Photo, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sex, "用户性别", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.DropDownListFor(model => model.Sex, new[] { new SelectListItem() { Selected = true, Text = "男", Value = bool.TrueString }, new SelectListItem() { Selected = true, Text = "女", Value = bool.FalseString } }, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Address, "用户地址", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="注册为新用户" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回首页", "Index")<br />
    @Html.ActionLink("登录", "Login")
</div>

